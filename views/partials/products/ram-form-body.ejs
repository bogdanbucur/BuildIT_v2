<div class="m-portlet">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                    General
                </h3>
            </div>
        </div>
    </div>
    <div class="m-portlet__body">
        <div class="form-group m-form__group row">
            <div class="col-md-3">
                <label>
                    Name:
                </label>
                <div class="input-group m-input-group m-input-group--square">
                    <input type="text" class="form-control m-input" placeholder="Enter name" name="ram_name">
                </div>
            </div>
            <div class="col-md-3 m--align-center">
                <label class="">
                    Recommended for Gaming:
                </label>
                <div class="m-radio-inline">
                    <label class="m-radio m-radio--solid">
                        <input type="radio" name="ram_gaming_recommended" checked value=true>
                        Yes
                        <span></span>
                    </label>
                    <label class="m-radio m-radio--solid">
                        <input type="radio" name="ram_gaming_recommended" value=false>
                        No
                        <span></span>
                    </label>
                </div>
            </div>
            <div class="col-md-3">
                <label>
                    Series:
                </label>
                <div class="input-group m-input-group m-input-group--square">
                    <input type="text" class="form-control m-input" placeholder="Enter series" name="ram_series">
                </div>
            </div>
            <div class="col-md-3">
                <label>
                    Type:
                </label>
                <div class="input-group m-input-group m-input-group--square">
                    <input type="text" class="form-control m-input" placeholder="Enter type" name="ram_type">
                </div>
            </div>
        </div>
        <div class="form-group m-form__group row">
            <div class="col-md-3">
                <label>
                    Capacity:
                </label>
                <div class="input-group m-input-group m-input-group--square">
                    <input type="text" class="form-control m-input" placeholder="Enter capacity" name="ram_capacity">
                </div>
            </div>
            <div class="col-md-3">
                <label>
                    Frequency:
                </label>
                <div class="input-group m-input-group m-input-group--square">
                    <input type="text" class="form-control m-input" placeholder="Enter frequency" name="ram_frequency">
                </div>
            </div>
            <div class="col-md-3">
                <label>
                    CAS Latency:
                </label>
                <div class="input-group m-input-group m-input-group--square">
                    <input type="text" class="form-control m-input" placeholder="Enter latency" name="ram_latency">
                </div>
            </div>
            <div class="col-md-3">
                <label>
                    Radiator:
                </label>
                <div class="input-group m-input-group m-input-group--square">
                    <input type="text" class="form-control m-input" placeholder="Enter radiator" name="ram_radiator">
                </div>
            </div>
        </div>
        <div class="form-group m-form__group row">
            <div class="col-md-3">
                <label>
                    Turbo Frequency:
                </label>
                <div class="input-group m-input-group m-input-group--square">
                    <input type="text" class="form-control m-input" placeholder="Enter turbo frequency" name="cpu_frequency_turbo">
                </div>
            </div>
            <div class="col-md-3">
                <label>
                    Standard:
                </label>
                <div class="input-group m-input-group m-input-group--square">
                    <input type="text" class="form-control m-input" placeholder="Enter standard" name="ram_standard">
                </div>
            </div>
            <div class="col-md-3">
                <label>
                    Power tension:
                </label>
                <div class="input-group m-input-group m-input-group--square">
                    <input type="text" class="form-control m-input" placeholder="Enter tension" name="ram_power_tension">
                </div>
            </div>
            <div class="col-md-3">
                <label>
                    Timing:
                </label>
                <div class="input-group m-input-group m-input-group--square">
                    <input type="text" class="form-control m-input" placeholder="Enter timing" name="ram_timing">
                </div>
            </div>
        </div>
    </div>
    <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
        <div class="m-form__actions m-form__actions--solid">
            <div class="row">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-primary">
                        Submit
                    </button>
                    <button type="reset" class="btn btn-secondary">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>